<% layout("/layouts/boilerplate") %>

<body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      margin-right: 2rem;
            margin-top: 2rem;
            text-align: center;
            opacity: 0.7;

    }
    .filter:hover{
opacity: 1;
cursor: pointer;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .tax-info{
      display: none;
    }
    .tax-toggle{
      border: 1px black solid;
      border-radius: 1rem;
      height: 2.5rem;
      padding: 1rem;
      align-items: center;
      display: flex;
      margin-left: 1rem;
      margin-top: 1rem;
    }
  </style>
  <!-- filters -->
    <div id="filters">

      <!-- trending -->
      <div class="filter">
       <div> <i class="fa-solid fa-fire"></i> </div>
        <p>Trending</p>
      </div>

      <!-- room -->
       <div class="filter">
       <div> <i class="fa-solid fa-bed"></i> </div>
        <p>Rooms</p>
      </div>

            <!-- conic cities -->
       <div class="filter">
       <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic cities</p>
      </div>

                  <!-- mountains -->
       <div class="filter">
       <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>

                        <!-- castles -->
       <div class="filter">
       <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>

                        <!-- pool-->
       <div class="filter">
       <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>

                        <!-- camp -->
       <div class="filter">
       <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>

                        <!-- farm -->
       <div class="filter">
       <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>

                        <!-- arctic -->
       <div class="filter">
       <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

                              <!-- Boates -->
       <div class="filter">
       <div><i class="fa-solid fa-ship"></i></div>
        <p>Boates</p>
      </div>

                        <!-- Domes-->
       <div class="filter">
       <div><i class="fa-solid fa-landmark-dome"></i></div>
        <p>Domes</p>
      </div>

<!-- switch toggle -->
 <div class="tax-toggle">
  <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
</div>
 </div>
    </div>
    <!-- images starts -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sml-1 mt-3">
       <% for(let listing of allListings){ %> 
<a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card" >
      <img src="<%= listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem;">
<div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
     <b> <%= listing.title %><br></b>
    &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
    <i class="tax-info">&nbsp;&nbsp; +18 GST</i>
    </p>
  </div>
</div>
    </a>

      <% } %>  

    </div>

    <!-- <ul>
       <% for(let listing of allListings){ %> 
        <li> <a href="/listings/<%= listing._id %>"><%= listing.title %></a></li>

      <% } %>  
    </ul> -->
</body>

<script>
  let taxSwitch= document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo= document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display !="inline"){
    info.style.display= "inline";
      }else{
        info.style.display = "none";
      }
    }
  })
</script>